<div class="container">
  <h1>My tasks</h1>

  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.title, task_path(task)%><%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
    <% end %>
  </ul>

  <div class="text-decoration-none">
    <%= link_to "Add new task", new_task_path %>
  </div>
  
</div>
